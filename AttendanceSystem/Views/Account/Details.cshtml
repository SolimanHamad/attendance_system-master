@model UserManagementModel
@{
    ViewData["Title"] = "Profile Information";
}
<h1>@ViewData["Title"]</h1>

<div class="mt-4">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="col-md-10">
                <div class="row">
                    <div class="form-group col">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" disabled />
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" disabled />
                </div>
                <div class="form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" disabled />
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="DateJoined" class="control-label"></label>
                        <input asp-for="DateJoined" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="Salary" class="control-label"></label>
                        <input asp-for="Salary" class="form-control" disabled />
                    </div>

                    <div class="form-group col">
                        <label asp-for="WorkStartTime" class="control-label"></label>
                        <input asp-for="WorkStartTime" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="WorkEndTime" class="control-label"></label>
                        <input asp-for="WorkEndTime" class="form-control" disabled />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="GracePeriod" class="control-label"></label>
                        <input asp-for="GracePeriod" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="VacationBalance" class="control-label"></label>
                        <input asp-for="VacationBalance" class="form-control" disabled />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="YearlyIncrement" class="control-label"></label>
                        <input asp-for="YearlyIncrement" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="InsuranceDeduction" class="control-label"></label>
                        <input asp-for="InsuranceDeduction" class="form-control" disabled />
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col">
                        <label asp-for="HousingAllowance" class="control-label"></label>
                        <input asp-for="HousingAllowance" class="form-control" disabled />
                    </div>
                    <div class="form-group col">
                        <label asp-for="TransportationAllowance" class="control-label"></label>
                        <input asp-for="TransportationAllowance" class="form-control" disabled />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts 
{
    <partial name="_ValidationScriptsPartial" />
}
