@model VacationViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Request Vacation</h1>

<div class="row mt-4">
    <div class="col-md-4 mx-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group col">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="TotalDays" class="control-label"></label>
                <input asp-for="TotalDays" class="form-control" disabled />
                <span asp-validation-for="TotalDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VacationType" class="control-label"></label>
                <select class="form-control" asp-for="VacationType">
                    <option selected="selected" value="">Please select</option>
                    <option value="@( (int)VacationType.Personal )">@VacationType.Personal</option>
                    <option value="@( (int)VacationType.Excused )">@VacationType.Excused</option>
                    <option value="@( (int)VacationType.Unpaid )">@VacationType.Unpaid</option>
                </select>
                <span asp-validation-for="VacationType" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Request Vacation" class="btn btn-default" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="@Url.Content("~/js/user-management.js")"></script>
}
