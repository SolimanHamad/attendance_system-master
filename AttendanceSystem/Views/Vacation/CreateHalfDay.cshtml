@model Vacation

@{
    ViewData["Title"] = "Request Half Day Vacation";
}

<h1>@ViewData["Title"]</h1>

<div class="row mt-4">
    <div class="col-md-4 mx-6">
        <form asp-action="CreateHalfDay">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Date</label>
                <input asp-for="StartDate" id="defaultDate" class="form-control" type="date" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Request Vacation" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<script>
    window.onload = function () {
        var date = new Date();
        $("#defaultDate").val(date.getFullYear() + "-" + date.getMonth()+1 + "-" + date.getDate());
    }
</script>