@model MissedEventRequestViewModel
@{
    ViewData["Title"] = "Missed Event Request";
}

<h1>Request Missed Event</h1>
<div class="row mt-4">
    <div class="col-md-4">
        <form method="post" asp-action="MissedEventRequest">
            <input type="hidden" asp-for="UserID" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Time" class="control-label">Time of event</label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Event" class="control-label"></label>
                <select asp-for="Event" class="form-control" asp-items="Html.GetEnumSelectList(typeof (Event))">
                </select>
                <span asp-validation-for="Event" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" class="form-control" placeholder="Write reasoning"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-default" type="submit">Send request</button>
                <a asp-action="MissedEventRequests">Back</a>

            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    <script>
        var today = new Date();
        today = today.toISOString().substr(0, 11);
        $('#Time').attr('max', today+"23:59");
    </script>
}